@using Headstone.AI.Models.ViewModels
@{
    // Try to get the breadcrumb
    List<BreadcrumbItemViewModel> breadcrumb = null;
    if (ViewBag.Breadcrumb != null)
    {
        breadcrumb = ViewBag.Breadcrumb as List<BreadcrumbItemViewModel>;
    }
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Headstone Admin Interface| @ViewBag.Title</title>
    <meta name="keywords" content="" />
    <meta name="description" content="">
    <meta name="author" content="T&G Workshop">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/favicon.ico">

    @RenderSection("headfirstentry", required: false)




    <!-- Font CSS -->
    <link rel='stylesheet' type='text/css' href='http://fonts.googleapis.com/css?family=Open+Sans:400,600,700'>
    <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Roboto:300,400,500,700">

    <!-- Skin CSS -->
    <link rel="stylesheet" type="text/css" href="/Content/skin/default_skin/css/theme.css">

    <!-- Icon  CSS -->
    <link href="/Content/fonts/icomoon/icomoon.css" rel="stylesheet" />
    <link href="~/Content/fonts/glyphicons/glyphicons.css" rel="stylesheet" />
    <link href="~/Content/fonts/font-awesome/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/fonts/iconsweets/iconsweets.css" rel="stylesheet" />
    <link href="~/Content/fonts/glyphicons-pro/glyphicons-pro.css" rel="stylesheet" />
    <link href="~/Content/fonts/octicons/octicons.css" rel="stylesheet" />

    <!-- Admin-tools CSS -->
    <link rel="stylesheet" type="text/css" href="/Content/admin-tools/admin-forms/css/admin-forms.css">

    <link rel="stylesheet" type="text/css" href="/Content/admin-tools/admin-plugins/admin-panels/adminpanels.css">

    <!-- Plugin CSS -->
    <link rel="stylesheet" type="text/css" href="/Content/vendor/plugins/magnific/magnific-popup.css">

    <!-- Custom CSS (SASS) -->
    <link rel="stylesheet" type="text/css" href="/Content/custom/styles/css/default.css" />
    <link rel="stylesheet" type="text/css" href="/Content/custom/styles/css/margins.css" />

    <!-- Custom Validaiton CSS  -->
    <link href="~/Content/custom/Jquery.Validation/Validation.css" rel="stylesheet" />
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
    

    <!-- Jquery Library -->
    <script src="/Content/vendor/jquery/jquery-1.11.1.min.js"></script>

    @RenderSection("head", required: false)
</head>

<body class="@ViewBag.CssPageName sb-l-o sb-r-c">
    <div id="main">

        @Html.Action("Header", "Common")
        @Html.Action("Sidebar", "Common")

        <section id="content_wrapper">
            <header id="topbar">
                <div class="topbar-left pull-left">
                    <ol class="breadcrumb">
                        @*<li class="crumb-active">
                                <a href="dashboard.html">Page Header</a>
                            </li>*@
                        @Html.Action("Breadcrumb", "Common", new { breadcrumb = breadcrumb })
                    </ol>
                </div>
                <div class="topbar-right">
                    @RenderSection("topbarright", false)
                </div>
            </header>

            @RenderBody()
        </section>

        @Html.Action("RightSidebar", "Common")
    </div>

    <!-- Basic Scripts -->
    <script src="/Content/vendor/jquery/jquery_ui/jquery-ui.min.js"></script>

    <!-- Validation Scripts -->
    <script src="~/Content/custom/Jquery.Validation/jquery.validate.js"></script>
    <script src="~/Content/custom/Jquery.Validation/jquery.validate.custom.js"></script>

    <!-- Mixitup Plugin -->
    <script src="~/Content/vendor/plugins/mixitup/jquery.mixitup.min.js"></script>

    <!-- Page Plugins -->
    <script src="~/Content/vendor/plugins/magnific/jquery.magnific-popup.js"></script>

    <!-- Theme Scripts -->
    <script src="/Content/js/utility/utility.js"></script>
    <script src="/Content/js/demo.js"></script>
    <script src="/Content/js/main.js"></script>

    <!-- Admin Plugins  -->
    <script src="/Content/admin-tools/admin-plugins/admin-panels/json2.js"></script>
    <script src="/Content/admin-tools/admin-plugins/admin-panels/jquery.ui.touch-punch.min.js"></script>
    <script src="/Content/admin-tools/admin-plugins/admin-panels/adminpanels.js"></script>


    @RenderSection("scripts", required: false)

    <script type="text/javascript">
        jQuery(document).ready(function () {
            "use strict";
            // Init Theme Core
            Core.init({
                sbm: "sb-l-c",
            });

            if (typeof pageReady === 'function') {
                pageReady();
            }

            if (typeof validationReady === 'function') {
                validationReady();
            }

            if (typeof customPageReady === 'function') {
                customPageReady();
            }
        });
    </script>


</body>
</html>