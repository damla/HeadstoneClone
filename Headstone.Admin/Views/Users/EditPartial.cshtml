@model BilkomPazaryeri.AI.Models.ViewModels.UserViewModel

<div class="row">
    <div class="col-md-8 col-xs-12 pl-xs-0">
        <div class="col-xs-6 form-group">
            <label>İsim</label>
            <input class="form-control" type="text" name="FirstName" value="@(Model?.Firstname)"/>
        </div>
        <div class="col-xs-6 form-group">
            <label>Soyisim</label>
            <input class="form-control" type="text" name="LastName" value="@(Model?.Lastname)"/>
        </div>
        <div class="col-xs-6 form-group">
            <label>E-posta</label>
            <input class="form-control" type="text" name="Email" value="@(Model?.Email)"/>
        </div>
        <div class="col-xs-6 form-group">
            <label>Şifre</label>
            <input id="password" class="form-control" type="password" data-elem-type="password" name="Password" />
            <a href="javascript:void(0);" onclick="showPassword(this, 'password');" class="showPasswordLink"></a>
        </div>
        <div class="col-xs-6 form-group">
            <label>Telefon</label>
            <input type="text" class="form-control" data-mask="phone" maxlength="10" autocomplete="off" name="PhoneNumber" value="@(Model?.PhoneNumber)">
        </div>
        <div class="col-xs-6 form-group">
            <label>Cep Telefonu</label>
            <input type="text" class="form-control" data-mask="phone" maxlength="10" autocomplete="off" name="MobileNumber" value="@(Model?.MobileNumber)">
        </div>
        <div class="col-xs-6 form-group">
            <label>Cinsiyet</label>
            <select class="form-control" name="Gender" value="@(Model?.Gender)">
                <option>Seçiniz</option>
                <option>Kadın</option>
                <option>Erkek</option>
            </select>
        </div>
        <div class="col-xs-6 form-group">
            <label>Durum</label>
            <select class="form-control" name="Status" value="@(Model?.AccountStatus)">
                <option value="Active">Aktif</option>
                <option value="Passive">Pasif</option>
            </select>
        </div>
        <div class="col-xs-6 form-group">
            <label>Doğum Tarihi</label>
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="fa fa-calendar"></i>
                </span>
                <input type="text" data-picker="date" class="form-control" maxlength="10" autocomplete="off"  value="@(Model?.DateOfBirth)"/>
            </div>
        </div>
        <div class="col-xs-6 form-group">
            <label>Şehir</label>
            <select class="form-control" name="City">
                <option>İstanbul</option>
                <option>Ankara</option>
            </select>
        </div>
    </div>

    <div class="col-md-4 col-xs-12 mt-xs-20 mt-md-0">
        <div class="avatar-upload">
            <div class="avatar-edit">
                <input id="avatarUpload" type='file' accept=".png, .jpg, .jpeg" onchange="imgUploadReadURL(this, 'avatar');" name="UploadedAvatar" />
                <label for="avatarUpload"></label>
            </div>
            <div class="avatar-preview">
                <!--
                If this modal called by new user view, then remove the background image from inline styling. Instead,
                include the following path: /Content/Files/Avatars/avatar-na.jpg
            -->
                <div data-upload-view="avatar" style="background-image: url('/Content/Files/Avatars/avatar-na.jpg');"></div>
            </div>
        </div>
    </div>
</div>