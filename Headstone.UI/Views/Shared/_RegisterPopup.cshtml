<div class="modal fade" id="registerModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" style="width: 500px; align-self: center;" role="document">
        <div class="modal-content" id="registerContent">
            <button type="button" id="registerClose" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <div class="modal-body mt-2 pb-0 mx-2">
                <div class="form-wrap w-100 px-4 py-3">
                    <div class="row container m-0 pt-2">
                        <img class="header-img w-100 mb-3" src="~/Content/Images/Icons/logo.png" alt="headstone_logo">
                        <form method="POST" action="uye-ol" class="w-100">
                            @Html.AntiForgeryToken()
                            <div class="form-group d-block register-form">
                                <label for="firstName" class="mb-1 text-muted float-left">Ad</label>
                                <input type="text" name="Firstname" id="firstName" class="form-control register-input">
                            </div>
                            <div class="form-group d-block register-form">
                                <label for="lastName" class="mb-1 text-muted float-left">Soyad</label>
                                <input type="text" name="Lastname" id="lastName" class="form-control register-input">
                            </div>
                            <div class="form-group d-block register-form">
                                <label for="email" class="mb-1 text-muted float-left">E-Posta</label>
                                <input type="email" name="Email" id="email" class="form-control register-input">
                            </div>
                            <div class="form-group d-block register-form">
                                <label for="password" class="mb-1 text-muted float-left">Şifre</label>
                                <input type="password" name="Password" id="password" class="form-control register-input">
                            </div>

                            <div class="form-group d-block register-form">
                                <label for="gender-btn-group" class="mb-1 text-muted float-left">Cinsiyet</label>
                                <div class="btn-group btn-toggle gender" id="gender-btn-group">
                                    <input type="button" name="Gender" class="btn btn-default" value="KADIN">
                                    <input type="button" name="Gender" class="btn btn-primary active" value="ERKEK">
                                </div>
                            </div>

                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" id="cb-agreement" />
                                <label class="custom-control-label" for="cb-agreement"><small class="checkbox-small">Kampanyalardan haberdar olmak için elektronik ileti almak istiyorum.</small></label>
                            </div>
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" id="cb-campaign" />
                                <label class="custom-control-label" for="cb-campaign"><small class="checkbox-small"><a href="~/uyelik-sozlesmesi" class="color-red">Üyelik koşullarını</a> ve <a href="~/kvkk" class="color-red">kişisel verilerimin</a> korunmasını kabul ediyorum.</small></label>
                            </div>
                            <button type="submit" class="btn btn-filled">KAYIT OL</button>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>